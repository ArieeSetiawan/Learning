<!DOCTYPE html>
<html><head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database</title>
    <style>
    body {
    font-family: Arial;
    }
    </style>
</head>
<body>
    <h1>List Employee</h1>
    <form>
    <button type="submit" formaction="/register" formmethod="get">Register</button>
    </form>
<form action="action" style="margin:auto;max-width:100px;">
  <!-- <input type="text" placeholder="Enter ID, Name or Email" id="search">
  <button type="submit" formaction="/" formmethod="get">Search</button> -->
</form>
     <table border="1" bgcolor="white" width="1300">
        <tr bgcolor="white">
            <th width="100">ID</th>
            <th width="300">Name</th>
            <th width="300">Email</th>
            <th width="200">Mobile</th>
            <th width="200">Action</th>
        </tr>
        <% for(var i=0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].id %></td>
              <td><%= data[i].name %></td>
              <td><%= data[i].email %></td>
              <td><%= data[i].mobile %></td>
              <td>    
                <form>
                <button type="submit" formaction="/detail/<%= data[i].id %>" formmethod="get">Detail</button>
                <button type="submit" formaction="/edit/<%= data[i].id %>" formmethod="get">Edit</button>
                <button type="submit" formaction="/delete/<%= data[i].id %>" formmethod="get">Delete</button>
                </form></td>
            </tr>
         <% } %>
    </table>
</body>
</html>